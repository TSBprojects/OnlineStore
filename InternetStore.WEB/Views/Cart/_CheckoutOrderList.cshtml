@using InternetStore.BLL.DataTransferObjects
@model IEnumerable<OrderItemDTO>

<table class="shop_table product-begreen-checkout-review-order-table">
    <thead>
        <tr>
            <th class="product-name">Product</th>
            <th class="product-total">Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (OrderItemDTO oi in Model)
        {
            <tr class="cart_item">
                <td class="product-name">@oi.Product.Name<strong class="product-quantity"> × @oi.ItemCount</strong></td>
                <td class="product-total"><span class="product-begreen-price-amount amount"><span class="product-begreen-price-currencysymbol">$</span>@((oi.Product.Price * oi.ItemCount).ToString(".00").Replace(",", "."))</span></td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr class="order-total">
            <th>Total</th>
            <td><strong><span class="product-begreen-price-amount amount"><span class="product-begreen-price-currencysymbol">$</span>@Model.ElementAt(0).Order.OrderPrice.ToString(".00").Replace(",", ".")</span></strong></td>
        </tr>
    </tfoot>
</table>