<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon-->
    <link rel="shortcut icon" href="~/Content/images/icon/favicon.png" type="image/x-icon">
    <!-- Web Fonts-->
    <link href="https://fonts.googleapis.com/css?family=Pacifico%7CSource+Sans+Pro:200,200i,300,300i,400,400i,600,600i,700,700i,900,900i&amp;amp;subset=latin-ext,vietnamese" rel="stylesheet">
    <!-- Vendor CSS-->
    @Styles.Render("~/bundles/MainCSS")
    @Styles.Render("~/bundles/ToastmessageCSS")
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries-->
    <!-- WARNING: Respond.js doesn't work if you view the page via file://-->    
    <!--if lt IE 9
    script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
    script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
    -->
</head>
<body class="home split-screen-home">
    <div id="preloaderKDZ"></div>
    <div class="yolo-site">
        <header class="header yolo-header-style-10">
            <div class="yolo-top-bar">
                <div class="container">
                    <div class="row">
                        <div class="top-sidebar top-bar-left col-md-4">
                            <aside id="text-11" class="widget widget_text">
                                <div class="textwidget">
                                    <div>Welcome to BeGreen - Best Plant</div>
                                </div>
                            </aside>
                        </div>
                        <div class="top-sidebar top-bar-right col-md-8">
                            <aside id="text-6" class="widget widget_text">
                                <div class="textwidget"><i class="fa fa-home"></i> 69 North Cleveland, Memphis <i style="margin-left: 15px" class="fa fa-phone"></i> + 46 234-623-213<i style="margin-left: 15px" class="fa fa-clock-o"></i> Mon - Fri: 9.00am - 8.00pm</div>
                            </aside>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mobile-menu">
                <div class="col-3 text-left"><a href="#primary-menu"><i class="fa fa-bars"></i></a></div>
                <div class="col-3 text-center">
                    <div class="logo">
                        <h1><a href="index.html"><img src="~/Content/images/logo/logo.png" alt="logo" /></a></h1>
                    </div>
                </div>
                <div class="col-3 text-right">
                    <div class="header-right">
                        <div class="search-button-wrapper header-customize-item style-default">
                            @if (!User.Identity.IsAuthenticated || (User.Identity.IsAuthenticated && Roles.IsUserInRole(User.Identity.Name, "Guest")))
                            {
                                <a href='@Url.Action( "Login", "Account", null)' class="menu-item">Войти<i class="fa fa-sign-in login-indicators" aria-hidden="true"></i></a>
                            }
                            @*<div class="icon-search-menu"><i class="wicon fa fa-search"></i></div>*@
                            <div class="yolo-search-wrapper">
                                <input id="search-ajax" placeholder="Enter keyword to search" type="search" />
                                <button class="search"><i class="fa fa-search"></i></button>
                                <button class="close"><i class="pe-7s-close"></i></button>
                            </div>
                        </div>
                        @if (User.Identity.IsAuthenticated && !Roles.IsUserInRole(User.Identity.Name, "Guest"))
                        {
                            <div id="authentication-block">
                                <label>@Html.Action("UserName", "Account", null)</label>
                                <i class="fa fa-key login-indicators" aria-hidden="true" title="@Html.Action("UserName","Account",null)"></i>
                                <a href='@Url.Action( "Logout", "Account", null)'><i class="fa fa-sign-out login-indicators" aria-hidden="true"></i></a>
                            </div>
                        }
                        <div class="shopping-cart-wrapper header-customize-item with-price">
                            <div class="widget_shopping_cart_content">
                                <div class="widget_shopping_cart_icon">
                                    <a href='@Url.Action("Cart", "Cart", null)' class="cart-href"><i class="wicon fa fa-shopping-bag"></i><span class="total total-product-count">@Html.Action("ProductCount", "Cart", null)</span></a>
                                </div>
                                @*<div class="cart_list_wrapper">
                                    <div class="scroll-wrapper cart_list product_list_widget scrollbar-inner">
                                        <ul class="cart_list product_list_widget scrollbar-inner scroll-content">
                                            <li class="empty">
                                                <h4>An empty cart</h4>
                                                <p>You have no item in your shopping cart</p>
                                            </li>
                                        </ul>
                                    </div>
                                </div>*@
                            </div>
                        </div> 
                    </div>
                </div>
            </div>
            <div class="header-logo">
                <h1><a href="index.html"><img src="~/Content/images/logo/logo.png" alt="logo" /></a></h1>
            </div>
            <div class="header-bottom">
                <div class="container">
                    <div class="main-nav-wrapper">
                        <div class="header-left">
                            <nav id="primary-menu" class="main-nav">
                                <ul class="nav">
                                    <li class="menu-item">
                                        @Html.ActionLink("Home", "Index", "Home", null, null)
                                    </li>
                                    <li class="menu-item">
                                        @Html.ActionLink("Товары", "Plants", "Product", new { id = 1 }, null)
                                    </li>
                                </ul>
                            </nav>
                            <!-- .header-main-nav-->
                        </div>
                        <div class="header-right">
                            <div class="search-button-wrapper header-customize-item style-default">
                                @if (!User.Identity.IsAuthenticated || (User.Identity.IsAuthenticated && Roles.IsUserInRole(User.Identity.Name, "Guest")))
                                {
                                    <a href='@Url.Action( "Login", "Account", null)' class="menu-item">Войти<i class="fa fa-sign-in login-indicators" aria-hidden="true"></i></a>
                                }
                                @*<div class="icon-search-menu"><i class="wicon fa fa-search"></i></div>*@
                                <div class="yolo-search-wrapper">
                                    <input placeholder="Enter keyword to search" type="search" />
                                    <button class="search"><i class="fa fa-search"></i></button>
                                    <button class="close"><i class="pe-7s-close"></i></button>
                                </div>
                            </div>
                            @if (User.Identity.IsAuthenticated && !Roles.IsUserInRole(User.Identity.Name, "Guest"))
                            {
                                <div id="authentication-block">
                                    <label>@Html.Action("UserName", "Account", null)</label>
                                    <i class="fa fa-key login-indicators" aria-hidden="true" title="@Html.Action("UserName","Account",null)"></i>
                                    <a href='@Url.Action( "Logout", "Account", null)'><i class="fa fa-sign-out login-indicators" aria-hidden="true"></i></a>
                                </div>
                            }
                            <div class="shopping-cart-wrapper header-customize-item with-price">
                                <div class="widget_shopping_cart_content">
                                    <div class="widget_shopping_cart_icon">
                                        <a href='@Url.Action("Cart", "Cart", null)' class="cart-href"><i class="wicon fa fa-shopping-bag"></i><span class="total total-product-count">@Html.Action("ProductCount", "Cart", null)</span></a>
                                    </div>
                                    @*<div class="cart_list_wrapper">
                                        <div class="scroll-wrapper cart_list product_list_widget scrollbar-inner">
                                            <ul class="cart_list product_list_widget scrollbar-inner scroll-content">
                                                <li class="empty">
                                                    <h4>An empty cart</h4>
                                                    <p>You have no item in your shopping cart</p>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>*@
                                </div>
                            </div>
                            <div class="header-customize-item canvas-menu-toggle-wrapper"></div>
                            @if (User.Identity.IsAuthenticated && !Roles.IsUserInRole(User.Identity.Name, "Guest"))
                            {
                                <div class="canvas-menu-toggle"><i class="fa fa-align-right"></i></div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <nav class="yolo-canvas-menu-wrapper dark ps-container">
                <a href="#" class="yolo-canvas-menu-close"><i class="fa fa-close"></i></a>
                @if (User.Identity.IsAuthenticated && Roles.IsUserInRole(User.Identity.Name, "Admin"))
                {
                    <div class="admin-product-button prod-name-admin active-button"><i class="fa fa-shopping-cart" aria-hidden="true"></i>  Товары</div>
                    <div class="admin-order-button prod-name-admin"><i class="fa fa-shopping-basket" aria-hidden="true"></i>   Заказы пользователей</div>
                }
                else if (User.Identity.IsAuthenticated && Roles.IsUserInRole(User.Identity.Name, "User"))
                {
                    <div class="admin-orders-user-button prod-name-admin"><i class="fa fa-shopping-basket" aria-hidden="true"></i> Мои заказы</div>
                }
                <div class="top-gradient"></div>
                <div id="preload-products"></div>
                <div class="prod-admin-container">
                    <div class="opacity-container"></div>
                </div>
                <div class="bottom-gradient"></div>
            </nav>
        </header>

        @RenderBody()

        <div class="div-box">
            <footer id="yolo-footer-wrapper">
                <div class="yolo-footer-wrapper footer-1">
                    <div class="footer-top">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-4 col-sm-4">
                                    <div class="footer-col footer-1-col-1">
                                        <h2><a href="index.html" class="logo"><img src="~/Content/images/logo/logo-footer.png" alt="logo1" width="84" height="63" class="vc_single_image-img attachment-full" /></a></h2>
                                        <p>We are a creative company that specializes in strategy & design. We like to create things with like – minded people who are serious about their passions.</p>
                                        <ul id="social-footer">
                                            <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                            <li><a href="#"><i class="fa fa-pinterest-p"></i></a></li>
                                            <li><a href="#"><i class="fa fa-vimeo"></i></a></li>
                                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-md-4 col-sm-4">
                                    <div class="footer-col footer-1-col-2">
                                        <h3>Our Office</h3>
                                        <div class="icon-info">
                                            <p><strong>Address</strong><br />69 North Cleveland Street, Memphis,USA.</p><i class="fa fa-map-marker"></i>
                                        </div>
                                        <div class="icon-info">
                                            <p><strong>Call Us</strong><br />(123) 8111 9210 (Or)<br />(012) 1111 6868</p><i class="fa fa-phone"></i>
                                        </div>
                                        <div class="icon-info">
                                            <p><strong>Email Us</strong><br />begreen@yolo.com</p><i class="fa fa-envelope"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 col-sm-4">
                                    <div class="footer-col footer-1-col-3">
                                        <h3>News Letter</h3>
                                        <p>Subcribe to our newsletter to get more free tips. No Spam, Promise.</p>
                                        @using (Ajax.BeginForm(
                                            "AddSubcribe", "Account", null,
                                            new AjaxOptions() { OnSuccess = "SubcriberAdded" }
                                            ))
                                        {
                                            <input name="email" type="email" placeholder="Enter your mail" />
                                            <button class="btn" type="submit">Sing up</button>
                                        }

                                    </div>
                                </div>
                            </div>
                            <div class="click-back-top-footer">
                                <button type="button" class="sn-btn sn-btn-style-17 sn-back-to-top fixed-right-bottom"><i class="fa fa-angle-up"></i>top</button>
                            </div>
                        </div>
                    </div>
                    <div class="footer-bottom">
                        <div class="container">
                            <p class="copyright">BEGREEN © YOLO 2016 COPYRIGHT</p>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <!-- .mv-site-->

    <div class="popup-wrapper">
    </div>
    <!-- .popup-wrapper-->
    <div class="click-back-top-body">
        <button type="button" class="sn-btn sn-btn-style-17 sn-back-to-top fixed-right-bottom"><i class="btn-icon fa fa-angle-up"></i></button>
    </div>
    <!-- Vendor jQuery-->
    @*<script type="text/javascript" src="~/Content/libs/jquery/jquery.min.js"></script>*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/MainJS")
    @Scripts.Render("~/bundles/ToastmessageJS")
    @RenderSection("scripts", required: false)
</body>
</html>
